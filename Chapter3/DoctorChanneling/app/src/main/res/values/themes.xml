<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DoctorChanneling" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.DoctorChanneling" parent="Base.Theme.DoctorChanneling" />

    <style name="Edittext" parent="ThemeOverlay.Material3.MaterialTimePicker.Display.TextInputEditText">
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">21dp</item>
        <item name="android:fontFamily">@font/averia_sans_libre</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/edittext_bg</item>
    </style>

    <style name="Button" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:layout_marginVertical" tools:targetApi="o">30dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTint">#198EB6</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="TextView.medium" parent="TextView.medium" tools:ignore="ResourceCycle">
        <item name="fontFamily">@font/averia_sans_libre</item>
        <item name="android:textSize">20sp</item>
        <item name="textFillColor">@color/black</item>
    </style>

    <style name="SendMessage" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/averia_sans_libre</item>
        <item name="textFillColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingHorizontal" tools:ignore="NewApi">22dp</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">15dp</item>
    </style>

    <style name="ReceiveMessage" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/averia_sans_libre</item>
        <item name="textFillColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingHorizontal" tools:ignore="NewApi">22dp</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">15dp</item>
    </style>

    <style name="Theme.AppCompat.CustomSplashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="windowSplashScreenAnimationDuration">0</item>
        <item name="postSplashScreenTheme">@style/Theme.DoctorChanneling</item>
    </style>

    <style name="BottomBarShape">
        <item name="cornerFamily">?attr/shapeCornerFamily</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="BottomBar" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:width">50dp</item>
        <item name="android:height">50dp</item>
        <item name="shapeAppearance">@style/BottomBarShape</item>
        <item name="android:color">@color/light_blue</item>
    </style>

    <style name="SearchView">
        <item name="android:padding">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/search_bar_bg</item>
        <item name="android:fontFamily">@font/averia_sans_libre</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>