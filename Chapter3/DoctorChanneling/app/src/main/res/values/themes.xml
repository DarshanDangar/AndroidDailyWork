<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DoctorChanneling" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.DoctorChanneling" parent="Base.Theme.DoctorChanneling" />

    <style name="Edittext" parent="ThemeOverlay.Material3.MaterialTimePicker.Display.TextInputEditText">
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingVertical">21dp</item>
        <item name="android:fontFamily">@font/averia_sans_libre</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/edittext_bg</item>
    </style>

    <style name="Button" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:layout_marginVertical">30dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTint">#198EB6</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="TextView.medium" parent="TextView.medium">
        <item name="fontFamily">@font/averia_sans_libre</item>
        <item name="android:textSize">20sp</item>
        <item name="textFillColor">@color/black</item>
    </style>

    <style name="SendMessage" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/averia_sans_libre</item>
        <item name="textFillColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingHorizontal">22dp</item>
        <item name="android:paddingVertical">15dp</item>
    </style>

    <style name="ReceiveMessage" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/averia_sans_libre</item>
        <item name="textFillColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingHorizontal">22dp</item>
        <item name="android:paddingVertical">15dp</item>
    </style>

</resources>