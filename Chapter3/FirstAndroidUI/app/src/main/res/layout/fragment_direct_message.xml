<layout>
    <data>
        <variable
            name="btn_text"
            type="String" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="home.DirectMessageFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_chat_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="82dp"
        android:layout_marginTop="105dp"
        android:src="@drawable/img_chat"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_greeting"
        app:layout_constraintTop_toBottomOf="@id/img_chat_image"
        app:layout_constraintStart_toStartOf="@id/img_chat_image"
        app:layout_constraintEnd_toEndOf="@id/img_chat_image"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/greeting_chat"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_chat_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_greeting"
        android:layout_marginTop="16dp"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_marginHorizontal="41dp"
        android:text="@string/description_chat"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cornerRadius="8dp"
        android:foregroundTint="@color/white"
        android:src="@drawable/img_message_text"
        android:backgroundTint="@color/light_blue"
        app:layout_constraintTop_toBottomOf="@id/tv_chat_description"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/tv_chat_description"
        app:layout_constraintEnd_toEndOf="@id/tv_chat_description"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>