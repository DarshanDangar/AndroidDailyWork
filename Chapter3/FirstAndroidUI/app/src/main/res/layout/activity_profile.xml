<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rv_call_bg"
    tools:context="profile.ProfileActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="26dp"
        android:src="@drawable/img_profile"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name"
        android:text="@string/profile_name"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/img_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_profile_email"
        android:text="@string/profile_email"
        android:layout_marginStart="1dp"
        android:textSize="14sp"
        android:textColor="@color/email_text"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/first_cardView"
        app:layout_constraintTop_toBottomOf="@id/tv_profile_email"
        app:strokeColor="@color/seperator"
        app:strokeWidth="0.5dp"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                layout="@layout/item_profile"
                android:id="@+id/item1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                bind:status='@{"Status"}'
                bind:statusDescription='@{"Available"}'
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/seperator1"
                app:layout_constraintTop_toBottomOf="@id/item1"
                android:background="@color/seperator"
                android:layout_marginHorizontal="16dp"
                />

            <include
                layout="@layout/item_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item2"
                app:layout_constraintTop_toBottomOf="@id/item1"
                app:status='@{"Status Message"}'
                app:statusDescription='@{"The unseen of spending three years at Pixelgra"}'
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/seperator2"
                app:layout_constraintTop_toBottomOf="@id/item2"
                android:background="@color/seperator"
                android:layout_marginHorizontal="16dp"
                />

            <include
                layout="@layout/item_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item3"
                app:layout_constraintTop_toBottomOf="@id/seperator2"
                bind:status='@{"Meeting ID"}'
                bind:statusDescription='@{"Generate Automatically"}'
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/second_cardView"
        android:layout_margin="16dp"
        app:strokeWidth="0.5dp"
        app:strokeColor="@color/seperator"
        app:layout_constraintTop_toBottomOf="@id/first_cardView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                layout="@layout/item_profile"
                android:id="@+id/item4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                bind:status='@{"Personal info"}'
                bind:statusDescription='@{""}'
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/seperator3"
                app:layout_constraintTop_toBottomOf="@id/item4"
                android:background="@color/seperator"
                android:layout_marginHorizontal="16dp"
                />

            <include
                layout="@layout/item_profile"
                android:id="@+id/item5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/seperator3"
                bind:status='@{"Help"}'
                bind:statusDescription='@{""}'
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/second_cardView"
        app:layout_constraintStart_toStartOf="@id/second_cardView"
        app:layout_constraintEnd_toEndOf="@id/second_cardView"
        android:drawableLeft="@drawable/img_logout"
        app:cornerRadius="8dp"
        android:text="@string/logout"
        android:textAlignment="textStart"
        android:textColor="@color/red"

        />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>