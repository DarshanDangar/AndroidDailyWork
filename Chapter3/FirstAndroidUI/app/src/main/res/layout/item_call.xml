<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <data>
        <variable
            name="data"
            type="com.example.firstandroidui.CallListDetails" />
    </data>

<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    layout_width="match_parent"
    layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="4dp"
    >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_margin="16dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_avtar"
        android:src="@drawable/img_avtar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_avtarName"
        app:layout_constraintTop_toTopOf="@id/img_avtar"
        android:text="@{data.name}"
        app:layout_constraintStart_toEndOf="@id/img_avtar"
        android:layout_marginStart="12dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_call_duration"
        app:layout_constraintStart_toStartOf="@+id/tv_avtarName"
        app:layout_constraintBottom_toBottomOf="@id/img_avtar"
        android:layout_marginTop="3dp"
        android:src="@drawable/img_call_duration"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_call_duration"
        app:layout_constraintStart_toEndOf="@id/img_call_duration"
        android:layout_marginStart="7dp"
        app:layout_constraintTop_toTopOf="@id/img_call_duration"
        app:layout_constraintBottom_toBottomOf="@id/img_call_duration"
        android:text="@{data.timeDuration}"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_calender"
        app:layout_constraintStart_toEndOf="@id/tv_call_duration"
        app:layout_constraintTop_toTopOf="@id/tv_call_duration"
        app:layout_constraintBottom_toBottomOf="@id/tv_call_duration"
        android:layout_marginStart="12dp"
        android:src="@drawable/img_calendar"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_call_date_time"
        app:layout_constraintStart_toEndOf="@id/img_calender"
        android:layout_marginStart="7dp"
        app:layout_constraintTop_toTopOf="@id/img_calender"
        app:layout_constraintBottom_toBottomOf="@+id/img_calender"
        android:text="@{data.dateAndTime}"/>

    <ImageView
        android:id="@+id/img_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:src="@drawable/img_details"
        app:layout_constraintBottom_toBottomOf="@id/btn_call"
        app:layout_constraintEnd_toStartOf="@id/btn_call"
        app:layout_constraintTop_toTopOf="@id/btn_call"
        app:layout_constraintEnd_toEndOf="@id/btn_call"
        />

    <ImageButton
        android:id="@+id/btn_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_call"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/white"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

 </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
</layout>