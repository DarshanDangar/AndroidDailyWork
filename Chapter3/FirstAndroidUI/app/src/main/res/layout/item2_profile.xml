<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_leading_profile"
        android:layout_marginStart="16dp"
        android:layout_marginVertical="13dp"
        android:src="@drawable/img_available"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal info"
        app:layout_constraintTop_toTopOf="@id/img_leading_profile"
        app:layout_constraintBottom_toBottomOf="@id/img_leading_profile"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/img_leading_profile"
        />

    <ImageButton
        android:id="@+id/btn_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="15dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/btn_forward"
        android:layout_marginEnd="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>